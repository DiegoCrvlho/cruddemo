<div>
    <h1>Employees</h1>
    <a href="<%= new_employee_path %>" class="btn btn-primary mb-3">Insert New Employee</a>
    
    <table class="table table-striped">
        <thead>
        
        <tr>
            <th>ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Department</th>
            <th>Country</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
            <% @employees.each do |employee| %>
            <tr>
            <td><%= employee.id %></td>
            <td><%= employee.firstname %></td>
            <td><%= employee.lastname %></td>
            <td><%= employee.phone %></td>
            <td><%= employee.email %></td>
            <td><%= employee.department.name %></td>
            <td><%= employee.country.name %></td>
           <td>
                <a href="<%= employee_path(employee) %>">Details</a> |
                <a href="<%= edit_employee_path(employee) %>">Edit</a> |
                <a href="<%= delete_employee_path(employee) %>">Delete</a>
           </td>
            </tr>
        <% end %>
        </tbody>
    </table>
</div>