<div>
    <h1>Employee</h1>
    
    <table class="table table-striped">
        <tbody>
            <tr>
                <th>ID</th>
                <td><%= @employee.id %></td>
            </tr>
            <tr>
                <th>FirstName</th>
                <td><%= @employee.firstname %></td>
            </tr>
            <tr>
                <th>Last Name</th>
                <td><%= @employee.lastname %></td>
            </tr>
            <tr>
                <th>Email</th>
                <td><%= @employee.email %></td>
            </tr>
            <tr>
                <th>Phone</th>
                <td><%= @employee.phone %></td>
            </tr>
            <tr>
                <th>Has Passport</th>
                <td><%= @employee.haspassport %></td>
            </tr>
            <tr>
                <th>Salary</th>
                <td><%= @employee.salary %></td>
            </tr>
            <tr>
                <th>Notes</th>
                <td><%= @employee.notes %></td>
            </tr>
            <tr>
                <th>Birth Date</th>
                <td><%= @employee.birthdate %></td>
            </tr>
            <tr>
                <th>Hire Date</th>
                <td><%= @employee.hiredate %></td>
            </tr>
            <tr>
                <th>Gender</th>
                <td><%= @employee.gender %></td>
            </tr>
            <tr>
                <th>Department</th>
                <td><%= @employee.department.name %></td>
            </tr>
            <tr>
                <th>Country</th>
                <td><%= @employee.country.name %></td>
            </tr>
        </tbody>
        
    </table>

    <a href="<%= employees_path %>">Back to Employees</a>
</div>      