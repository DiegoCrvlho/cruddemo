<div>
    <h1>New Offshore Employee</h1>

    <div data-controller="cascadingselect">

    <%= form_for @offshoreemployee, local: true, html: {class: "form-horizontal", multipart: true} do |f| %>

        <fieldset>
            <div class="form-group row">
                <label class="col-sm-2 control-label">
                    First Name:
                <span class="star">*</span>
                </label>
                <div class="col-sm-10">
                    <%= f.text_field :firstname, placeholder: "First Name",
                    class: "form-control", autofocus: true  %>
                </div>
            </div>
        </fieldset>

        <fieldset>
            <div class="form-group row">
                <label class="col-sm-2 control-label">
                    Last Name:
                <span class="star">*</span>
                </label>
                <div class="col-sm-10">
                    <%= f.text_field :lastname, placeholder: "Last Name",
                    class: "form-control", autofocus: true  %>
                </div>
            </div>
        </fieldset>

        <fieldset>
            <div class="form-group row">
                <label class="col-sm-2 control-label">
                    Country:
                <span class="star">*</span>
                </label>
                <div class="col-sm-10">
                    <%= f.select :country_id, options_from_collection_for_select(select_country, "id", "name"), 
                    { include_blank: "Select Country" }, 
                    class: "form-control", autofocus: true,
                    data: { action: "change->cascadingselect#loadStates", "cascadingselect-target": "countrySelect" }  %>
                </div>
            </div>
        </fieldset>

        <fieldset>
            <div class="form-group row">
                <label class="col-sm-2 control-label">
                    State:
                <span class="star">*</span>
                </label>
                <div class="col-sm-10">
                    <%= f.select :state_id, options_from_collection_for_select([], "id", "name"), 
                    { include_blank: "Select State" }, 
                    class: "form-control", autofocus: true,
                    data: { action: "change->cascadingselect#loadCities", "cascadingselect-target": "stateSelect" }  %>
                </div>
            </div>
        </fieldset>

        <fieldset>
            <div class="form-group row">
                <label class="col-sm-2 control-label">
                    City:
                <span class="star">*</span>
                </label>
                <div class="col-sm-10">
                     <%= f.select :city_id, options_from_collection_for_select([], "id", "name"), 
                    { include_blank: "Select City" }, 
                    class: "form-control", autofocus: true,
                    data: {"cascadingselect-target": "citySelect"}   %>
                </div>
            </div>
        </fieldset>
    <% end %>
    </div>
</div>