<div class="container mt-4">
  <h1 class="mb-4">New User</h1>

  <%= form_for @user, html: { class: "form-horizontal", multipart: true } do |f| %>

  <div id="erro_explanation">
        <% if @user.errors.present? %>
            <h3 class="error">
              <%= "#{pluralize(@user.errors.count, "error")} 
              prohibited this employee from being saved:" %>
            </h3>
        <% end %>

        <ul>
            <% @user.errors.full_messages.each do |message| %>
                <li class="error"><%= message %></li>
            <% end %>
        </ul>
    </div>

    <!-- NAME -->
    <div class="form-group row mb-3">
      <label class="col-sm-3 col-form-label">Name <span class="star">*</span></label>
      <div class="col-sm-9">
        <%= f.text_field :name, placeholder: "Enter First Name", class: "form-control" %>
        <%= print_error(@user.errors, :name) %>
      </div>
    </div>

    <!-- PASSWORD -->
    <div class="form-group row mb-3">
      <label class="col-sm-3 col-form-label">Password <span class="star">*</span></label>
      <div class="col-sm-9">
        <%= f.password_field :password, placeholder: "Enter your password", class: "form-control" %>
        <%= print_error(@user.errors, :password) %>
      </div>
    </div>

    <!-- CONFIRM PASSWORD -->
    <div class="form-group row mb-3">
      <label class="col-sm-3 col-form-label">Confirm Password <span class="star">*</span></label>
      <div class="col-sm-9">
        <%= f.password_field :password_confirmation, placeholder: "Confirm your password", class: "form-control" %>
        <%= print_error(@user.errors, :password) %>
      </div>
    </div>

    <!-- GENDER -->
    <div class="form-group row mb-3">
      <label class="col-sm-3 col-form-label">Gender <span class="star">*</span></label>
      <div class="col-sm-9 d-flex align-items-center">
        <div class="form-check mr-4">
          <%= f.radio_button :gender, "Male", class: "form-check-input", id: "male" %>
          <label class="form-check-label" for="male">Male</label>
        </div>
        <div class="form-check">
          <%= f.radio_button :gender, "Female", class: "form-check-input", id: "female" %>
          <label class="form-check-label" for="female">Female</label>
        </div>
        <%= print_error(@user.errors, :gender) %>
      </div>
    </div>

    <!-- BIRTHDATE -->
    <div class="form-group row mb-3">
      <label class="col-sm-3 col-form-label">Birth Date</label>
      <div class="col-sm-9">
        <%= f.date_field :birthdate, class: "form-control" %>
        <%= print_error(@user.errors, :birthdate) %>
      </div>
    </div>

    <!-- EMAIL -->
    <div class="form-group row mb-3">
      <label class="col-sm-3 col-form-label">Email <span class="star">*</span></label>
      <div class="col-sm-9">
        <%= f.email_field :email, placeholder: "Enter Email", class: "form-control" %>
        <%= print_error(@user.errors, :email) %>
      </div>
    </div>

    <!-- PHONE -->
    <div class="form-group row mb-3">
      <label class="col-sm-3 col-form-label">Phone Number <span class="star">*</span></label>
      <div class="col-sm-9">
        <%= f.text_field :phone, placeholder: "Enter Phone Number", class: "form-control" %>
        <%= print_error(@user.errors, :phone) %>
      </div>
    </div>

    <!-- POSTAL CODE -->
    <div class="form-group row mb-3">
      <label class="col-sm-3 col-form-label">Postal Code <span class="star">*</span></label>
      <div class="col-sm-9">
        <%= f.text_field :postalcode, placeholder: "Enter Postal Code", class: "form-control" %>
        <%= print_error(@user.errors, :postalcode) %>
      </div>
    </div>

    <!-- PROFILE -->
    <div class="form-group row mb-3">
      <label class="col-sm-3 col-form-label">Profile of User <span class="star">*</span></label>
      <div class="col-sm-9">
        <%= f.text_area :notes, placeholder: "Enter Profile", rows: 3, class: "form-control" %>
        <%= print_error(@user.errors, :notes) %>
      </div>
    </div>

    <!-- WEBSITE -->
    <div class="form-group row mb-3">
      <label class="col-sm-3 col-form-label">Website URL <span class="star">*</span></label>
      <div class="col-sm-9">
        <%= f.text_field :websiteurl, placeholder: "Enter Website URL", class: "form-control" %>
        <%= print_error(@user.errors, :websiteurl) %>
      </div>
    </div>

    <!-- TERMS -->
    <div class="form-group row mb-3">
      <label class="col-sm-3 col-form-label">Terms & Conditions <span class="star">*</span></label>
      <div class="col-sm-9">
        <div class="form-check mt-2">
          <%= f.check_box :termsandconditions, class: "form-check-input", id: "terms" %>
          <label class="form-check-label" for="terms">I agree</label>
          <%= print_error(@user.errors, :termsandconditions) %>
        </div>
      </div>
    </div>

    <!-- ROLE -->
    <div class="form-group row mb-5">
      <label class="col-sm-3 col-form-label">Role <span class="star">*</span></label>
      <div class="col-sm-9">
        <%= f.text_field :role, placeholder: "Enter Role (admin, moderator...)", class: "form-control" %>
        <%= print_error(@user.errors, :role) %>
      </div>
    </div>

    <div class="text-right mb-5">
      <%= f.submit "SignUp", class: "btn btn-primary px-4", formnovalidate: true %>
    </div>

  <% end %>
</div>
